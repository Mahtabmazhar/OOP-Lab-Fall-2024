    }                                          

    private void InterestActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String accountType = (String) jComboBox1.getSelectedItem();
        double balance = Double.parseDouble(Balance.getText());
        Account account;

        // Apply polymorphism: use the selected account type
        if ("Saving".equals(accountType)) {
            account = new SavingAccount(balance);
            ((SavingAccount) account).calculateInterest(); // default interest rate
            ((SavingAccount) account).calculateInterest(0.05); // overloaded method with custom rate
        } else {
            account = new CurrentAccount(balance);
            account.calculateInterest(); // default interest for CurrentAccount
        }

        // Display account details and interest calculation
        jTextArea1.setText(account.getAccountDetails());
    }                                        

